{
  "name": "Play Console Totalizer",
  "description": "Would't it be cool if you could total your app installs, automagically?",
  "version": "0.1",
  "manifest_version": 2,
 
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://play.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "totalizer-16.png",
    "128": "totalizer-128.png"
  }
}